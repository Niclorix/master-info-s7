compilation du td3
utilisation:
"$ant svg" pour compiler
"$ant" pour compiler et lancer le programme
Le rÃ©sultat se trouve dans out.html
Lionel
====================================================================== -->
<project name="td3" default="default" basedir=".">
    <property name="svg.bin.dir" location="." />
    <property name="svg.src.dir" location="." />
    <property name="svg.output.dir" location="output" />
    <property name="svg.lib.dir" location="lib" />

  <!-- =================================
       target: default
       ================================= -->
    <target name="default" depends="svg" description="lancer le programme">
      <java classname="fr.ubordeaux.ao.GenerateSVGSampleFile" output="out.html">
        <classpath>
           <fileset dir="${svg.lib.dir}">
              <include name="jdom-2.0.6.zip" />
             </fileset>
           </classpath>
           <classpath>
              <pathelement location="${svg.bin.dir}" />
               <pathelement location="${svg.lib.dir}" />
             </classpath>
           </java>
         </target>

<!-- =================================
   target: svg
   ================================= -->
   <target name="svg" depends="" description="compilation des sources">

     <javac srcdir="." destdir="." classpath="." includeantruntime="false" debug="off">
       <classpath>
          <fileset dir=".">
             <include name="jdom-2.0.6.zip" />
            </fileset>
          </classpath>
        </javac>

      </target>


    </project>
